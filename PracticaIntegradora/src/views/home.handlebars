<div class="container mt-5">
    <div class="row">
        {{#each products}}
            <div class="col-md-4">
                <div class="card shadow-sm mb-4">
                    <img src="{{this.thumbnails}}" class="card-img-top img-fluid img-size" alt="{{this.title}}">
                    <div class="card-body text-center">
                        <h5 class="card-title">{{this.title}}</h5>
                         <p class="card-text">Id: {{this._id}}</p>
                        <p class="card-text text-danger">Precio: {{this.price}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<style>
    .img-size {
        height: 300px; 
        object-fit: cover; 
    }
</style>
